package services

{{- if .Imports }}
import (
    {{- range .Imports }}
    "{{ . }}"
    {{- end }}
)
{{- end }}

type I{{ .Service.Name }} interface {
    {{- range .Service.Methods }}
    {{ .Name }}(
        {{- range $index, $param := .Params }}
        {{ if $index }}, {{ end }}{{ $param.Name }} {{ $param.Type }}
        {{- end }}
    ) (
        {{- range $index, $ret := .Returns }}
        {{ if $index }}, {{ end }}{{ $ret.Name }} {{ $ret.Type }}
        {{- end }}
    )
    {{- end }}
}

type {{ .Service.Name }} struct {
    {{- range .Repositories }}
    {{ lowerFirst .Name }} *repositories.{{ .Name }}
    {{- end }}
}

func New{{ .Service.Name }}(
    {{- if .Repositories }}
    {{- range $index, $repo := .Repositories }}
    {{ if $index }}, {{ end }}{{ lowerFirst $repo.Name }} *repositories.{{ $repo.Name }}
    {{- end }}
    {{- end }}
) *{{ .Service.Name }} {
    return &{{ .Service.Name }}{
        {{- if .Repositories }}
        {{- range .Repositories }}
        {{ lowerFirst .Name }}: {{ lowerFirst .Name }},
        {{- end }}
        {{- end }}
    }
}

